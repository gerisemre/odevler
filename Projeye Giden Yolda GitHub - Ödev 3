            arrlist.Add(143);
            arrlist.Add(25);
            arrlist.Add(234);
            arrlist.Add(456);
            arrlist.Add(3);
            arrlist.Add(56);

            int toplam=0;

            foreach (int i in arrlist)
            {
                Console.WriteLine(i);

                toplam = toplam + i;


            }
                
            Console.WriteLine("Dizideki sayilarin toplami: {0}",toplam);

